<!DOCTYPE html>
<html lang="en">
<%- include('./includes/head', {title: "Cardapio"}) %>
<body>
    <%- include('./includes/header') %>

    <main class="container mt-5">
        <div class="row">
        <% listaDePizza.forEach((pizza,index) => { %>
        
            <div class="col-md-4 p-2">
                <div class="card card-size">
                    <img class="card-img-top" src="/img/<%= pizza.img %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= pizza.flavour %></h5>
                        <p class="card-text">Pre√ßo da pizza:  R$ <%= pizza.preco %></p>
                        <button class="btn btn-success">Comprar</button>
                    </div>
                    <div class="card-footer d-flex justify-content-left">
                        
                        <form action="/cardapio/deletar/<%= index %>?_method=DELETE" method="POST">
                            <button class="btn btn-warning" type="submit">Excluir</button>
                        </form>
                        <a href="/cardapio/alterar/<%= index %>" class="btn btn-primary ml-1"> Alterar</a>
                    </div>
                 </div>
            </div>
        <% }) %>
        <div class="col-md-4 p-2">
            <div class="card  card-size text-white">
                <div class="card-body d-flex justify-content-center align-items-center ">
                   <a href="/cardapio/cadastro" class="badge badge-danger">
                        <div class="btn-add-new-card d-flex justify-content-center align-items-center">
                            <!-- <p style="padding:10 0; margin:0 0 3px 0">+</p> -->
                            +
                        </div>
                    </a>
                </div>
            </div>
        </div>
        </div>
    </main>
</body>
</html>